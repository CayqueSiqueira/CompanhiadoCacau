@model CompanhiadoCacau.Models.Pedido

@{
    ViewData["Title"] = "Detalhes do Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h3 class="page-title">Detalhes do Pedido</h3>
    <hr />
    <div class="form-container">
        <div class="row">
            <div class="form-group col-md-6">
                <label class="control-label">Cliente</label>
                <input type="text" class="form-control" value="@Model.Cliente.Nome" readonly />
            </div>

            <div class="form-group col-md-6">
                <label class="control-label">Status</label>
                <input type="text" class="form-control" value="@Model.Status" readonly />
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <label class="control-label">Data do Pedido</label>
                <input type="text" class="form-control" value="@Model.DataPedido.ToString("yyyy-MM-dd")" readonly />
            </div>

            <div class="form-group col-md-6">
                <label class="control-label">Responsável pelo Atendimento</label>
                <input type="text" class="form-control" value="@Model.ResponsavelAtendimento" readonly />
            </div>
        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <label class="control-label">Telefone</label>
                <input type="text" class="form-control" value="@Model.Cliente.Telefone" readonly />
            </div>
        </div>

        <div class="form-group d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-secondary w-25">Voltar</a>
            <a asp-action="Edit" asp-route-id="@Model?.PedidoId" class="btn btn-primary w-25">Editar</a>
        </div>
    </div>
</div>

<style>
    .form-container {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }
</style>
