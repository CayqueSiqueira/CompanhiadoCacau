@using CompanhiadoCacau.Extensions
@model IEnumerable<CompanhiadoCacau.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex text-center">
        <h3>Clientes</h3>
        <a class="btn custom-btn-add ms-3" asp-action="Create">
            <i class="fas fa-plus"></i>
        </a>
    </div>
    <hr />
    <div class="box">
       

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.DataNascimento)</th>
                    <th>@Html.DisplayNameFor(model => model.CPF)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                    <th>@Html.DisplayNameFor(model => model.Endereco)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.CPF))
                            {
                                @item.CPF.FormatarCpf()
                            }
                            else
                            {
                                @:CPF inválido
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.Telefone))
                            {
                                @item.Telefone.FormatarTelefone()
                            }
                            else
                            {
                                @:Telefone inválido
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Endereco.Bairro)</td>
                        <td class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-info btn-rounded mr-2" title="Visualizar">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-warning btn-rounded mr-2" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger btn-rounded" title="Excluir">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    </div>
</div>

<style>

    .box{
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
            font-size: 1.1rem;
        }

    .search-container {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .search-input {
        flex: 1;
        border-top-left-radius: 20px;
        border-bottom-left-radius: 20px;
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
        padding: 10px 20px;
        border: 1px solid #ced4da;
        border-right: none;
    }

    .custom-btn-add {
        color: black;
        border-left: none;
        cursor: pointer;
    }

        .custom-btn-add i {
            margin: 0;
        }

    .table-container {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }
    </style>

